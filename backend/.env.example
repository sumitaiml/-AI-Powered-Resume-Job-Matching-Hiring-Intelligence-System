# HRTech Platform Backend Configuration

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/hrtech_db
DATABASE_ECHO=False

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Vector DB
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/embeddings

# NLP Models
SPACY_MODEL=en_core_web_sm
SBERT_MODEL=all-MiniLM-L6-v2

# ML Models paths
SENIORITY_MODEL_PATH=./models/seniority_model.pkl
RANKING_MODEL_PATH=./models/ranking_model.pkl
SKILL_GRAPH_PATH=./data/skill_ontology/skill_graph.json

# File upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_RESUME_FORMATS=pdf,docx,txt

# API
API_TITLE=HRTech Platform API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered resume screening and candidate ranking system

# Ranking Parameters
SKILL_WEIGHT=0.45
EXPERIENCE_WEIGHT=0.35
SENIORITY_WEIGHT=0.20

# Bias Mitigation
APPLY_BIAS_MITIGATION=True
